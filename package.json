{
  "name": "@bhanudeep/tenant-manager",
  "version": "1.0.3",
  "description": "A framework-agnostic TypeScript package for multi-tenant applications with dynamic theming, asset management, and configuration loading",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:adapters",
    "build:core": "tsc -p tsconfig.core.json",
    "build:adapters": "npm run copy:adapters",
    "copy:adapters": "mkdir -p dist && cp -r src/angular dist/ && cp -r src/react dist/ && cp -r src/vue dist/ && cp src/index.ts dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "echo \"Add your preferred linter here\"",
    "test": "echo \"Add your test runner here\""
  },
  "keywords": [
    "multi-tenant",
    "theming",
    "configuration",
    "asset-management",
    "typescript",
    "framework-agnostic"
  ],
  "author": "UTU Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bhanudeep/Tenant-Manager.git"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "rxjs": "^7.8.0"
  },
  "peerDependencies": {
    "@angular/common": ">=16.0.0",
    "@angular/core": ">=16.0.0",
    "react": ">=18.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/common": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}
